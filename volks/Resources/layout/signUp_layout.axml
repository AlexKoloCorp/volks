<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:id="@+id/activity_signUp">
	<RelativeLayout
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:id="@+id/signUp_Image_Relative"
		android:background="@color/carlog_back"
		
		>
		<ImageView
			android:src="@drawable/CarlogFinal"
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:id="@+id/imageView1"
		/>
	</RelativeLayout>
	<ScrollView
		android:id="@+id/scroll" 
		android:layout_width="match_parent" 
		android:layout_height="match_parent">
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/signUp_Image_Relative"
			android:id="@+id/touch_interceptor"
			android:descendantFocusability="beforeDescendants"
			android:focusableInTouchMode="true">
			<EditText
				android:layout_width="200dp"
				android:layout_height="wrap_content"
				android:id="@+id/registerEmail"
				android:hint="E-mail"
				android:inputType="textCapWords"
				android:layout_marginTop="170dp"				
				android:layout_centerHorizontal="true"
				android:maxLines="1"	
				android:singleLine="True"
				android:background="@drawable/edittextborder"
	/>
			<EditText
				android:layout_width="200dp"
				android:layout_height="wrap_content"
				android:id="@+id/register_password"
				android:hint="Password"
				android:inputType="textPassword"
				android:layout_centerHorizontal="true"
				android:layout_below="@id/registerEmail"
				android:background="@drawable/edittextborder"
		
	/>
			<EditText
				android:layout_width="200dp"
				android:layout_height="wrap_content"
				android:id="@+id/Confirm_password_zone"
				android:hint="Confirm password"
				android:inputType="textPassword"
				android:layout_centerHorizontal="true"
				android:layout_below="@id/register_password"
				android:background="@drawable/edittextborder"
		
	/>
			<Button
				android:text="Register"
				android:layout_width="200dp"
				android:layout_height="30dp"
				android:layout_centerHorizontal="true"
				android:id="@+id/Register_button"
				android:layout_marginTop="10dp"
				android:layout_below="@id/Confirm_password_zone"
				android:textColor="#ffffff"
				android:background="@drawable/buttonStyleYellow"
				android:clickable="@bool/abc_action_bar_embed_tabs"
	/>		
			<Button
				android:text="Back"
				android:layout_width="200dp"
				android:layout_height="30dp"
				android:layout_centerHorizontal="true"
				android:id="@+id/Back_button"
				android:layout_marginTop="5dp"
				android:layout_below="@id/Register_button"
				android:textColor="#857566"
				android:background="@drawable/buttonStyleDark"
				android:clickable="@bool/abc_action_bar_embed_tabs"
	/>	
		</RelativeLayout>
		</ScrollView>
</LinearLayout>
